def myScript

pipeline {
    agent any

    stages {
        stage('Init') {
            steps {
                script {
                    // Load the Groovy script
                    myScript = load 'file.groovy'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    myScript.build()
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    myScript.test()
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    myScript.deploy()
                }
            }
        }
    }
}
